<h1 class="text-danger text-center mt-5">Eat-A-Burger!</h1>

<div class="text-center">
<img src="hamburger.svg" alt="burger" style="height: 250px; width:300px;">

<div class="row">
  <div class="col-6">
    <ul id="readyToEat" class="list-group">
      {{#each burgers}}
        {{#unless devoured}}
          <li class="list-group-item">
            <p class="text-danger font-weight-bold">
              {{id}}. {{name}}

              <button data-id="{{id}}" value="1" class="devourBurger btn btn-primary">Devour it!</button>
            </p>
          </li>
        {{/unless}}  
      {{/each}}
    </ul>
  </div>
  <div class="col-6">
    <ul id="devoured" class="list-group">
      {{#each burgers}}
        {{#if devoured}}
          <li class="list-group-item disabled" aria-disabled="true">
            <p>
              {{id}}. {{name}}

            </p>
          </li>
        {{/if}}
      {{/each}}
    </ul>
  </div>
</div>

<h2 class="text-danger">Make a burger!</h2>
<form class="create-form">
  <div class="form-group">
    <input type="text" name="burger" id="burgername">
    <button type="submit" class="btn btn-primary">Make it!</button>
  </div>
</form>

</div>